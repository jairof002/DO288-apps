{
    "kind": "BuildConfig",
    "apiVersion": "build.openshift.io/v1",
    "metadata": {
        "name": "custom-pipeline"
        },
    "spec:" {
        "source": {
            "type": "Git",
            "git": {
                "url": "https://github.com/jairof002/DO288-apps.git".
                "ref": "custom-pipeline"
            }.
            "contextDir": "books"
        },
        "strategy": {
            "type": "JenkinsPipeline",
            "jenkinsPipelineStrategy": {
                "jenkinsFilePath": "jenkins/Jenkinsfile"
                }
            }
        }
}
